# Produção - Railway
NODE_ENV=production
API_PORT=3001

# Database - PostgreSQL (Railway will provide this)
DATABASE_URL="postgresql://username:password@hostname:5432/database"

# JWT Secret - IMPORTANTE: Gerar um novo para produção
JWT_SECRET=generate-a-new-super-secret-jwt-key-for-production-use

# Frontend URL
FRONTEND_URL=https://staging.fisiohub.app

# Email Configuration (para convites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-production-email@gmail.com
SMTP_PASS=your-email-password

# AbacatePay (Gateway de Pagamento)
ABACATEPAY_TOKEN=your-abacatepay-token
ABACATEPAY_WEBHOOK_SECRET=your-webhook-secret

# File Upload
MAX_FILE_SIZE=10MB
UPLOAD_DIR=./uploads

# Security
BCRYPT_ROUNDS=12

# Multitenancy
DEFAULT_SCHEMA=public